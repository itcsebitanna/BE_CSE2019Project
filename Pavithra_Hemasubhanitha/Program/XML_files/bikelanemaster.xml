<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TxtBusDtlsBMdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chocolate"
        android:gravity="center"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:text="Parking Lane - Master"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/seashell" />

    <EditText
        android:id="@+id/TxtBLIDLM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:editable="false"
        android:hint="Lane-ID"
        android:inputType="number" >

    </EditText>

    <EditText
        android:id="@+id/TxtBLaneLM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Lane Name"
        android:inputType="textPersonName"  >

        <requestFocus />
    </EditText>


    <EditText
        android:id="@+id/TxtBDescLM"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPostalAddress"
        android:textAlignment="textStart" />
<EditText
        android:id="@+id/TxtBCityLM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName"  >

        <requestFocus />
    </EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/CmdBSubLM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.52"
            android:text="Submit"
			    android:background="@color/darkolivegreen"
                android:textColor="@color/azure" 
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/CmdBBackLM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.52"
            android:background="@color/darkolivegreen"
            android:text="Back"
            android:textColor="@color/azure" />
    </LinearLayout>
</LinearLayout>