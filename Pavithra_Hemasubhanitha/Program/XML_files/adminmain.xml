<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkcyan"
    android:orientation="vertical" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewdf1am"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome Administrator"
        android:textColor="@color/gainsboro"
        android:textSize="27dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/CmdViewUsersAM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25px"
        android:background="@color/orangered"
        android:text="View Users"
        android:textColor="@color/cornsilk"
        android:textSize="22dp" />

    <Button
        android:id="@+id/CmdLaneMasterAM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:background="@color/chocolate"
        android:text="Lane Master - Car Paking"
        android:textColor="@color/cornsilk"
        android:textSize="22dp" />

    <Button
        android:id="@+id/CmdLMBPAM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:background="@color/orangered"
        android:text="Lane Master - Bike Paking"
        android:textColor="@color/cornsilk"
        android:textSize="22dp" />
    
    <Button
        android:id="@+id/CmdCarParkingSummaryAM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:background="@color/chocolate"
        android:text="Car Parking Summary"
        android:textColor="@color/cornsilk"
        android:textSize="22dp" />

    <Button
        android:id="@+id/CmdBikeParkingSummaryAM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:background="@color/orangered"
        android:text="Bike Parking Summary"
        android:textColor="@color/cornsilk"
        android:textSize="22dp" />
    
    <Button
        android:id="@+id/CmdSignoutAM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:background="@color/chocolate"
        android:text="Signout"
        android:textColor="@color/cornsilk"
        android:textSize="22dp" />
</LinearLayout>
 
</LinearLayout>
