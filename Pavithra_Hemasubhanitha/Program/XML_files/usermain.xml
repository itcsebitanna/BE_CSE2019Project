<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mistyrose"
    android:orientation="vertical" >
    
<LinearLayout
        android:id="@+id/linearLayout1CM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/TxtWel111stmCM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Welcome : "
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/palegoldenrod"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/LblCM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/gainsboro" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2CM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

   <TextView
       android:id="@+id/TxtWel111stmCMVVF"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:text="Mobile Number :    "
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:textColor="@color/seashell"
       android:textSize="20dp" />

                <TextView
                    android:id="@+id/TxtUNCM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/cornsilk"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3CM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:orientation="vertical" >

        <Button
            android:id="@+id/CmdBookBusSM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkolivegreen"
            android:text="Car Parking"
            android:textColor="@color/aliceblue" />

        <Button
            android:id="@+id/CmdBikeParkingSM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkgoldenrod"
            android:text="Bike Parking"
            android:textColor="@color/aliceblue" />
        
        <Button
            android:id="@+id/CmdViewSummSM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkolivegreen"
            android:text="Car Booking Summary"
            android:textColor="@color/aliceblue" />

       <Button
           android:id="@+id/CmdVBPSSM"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/darkgoldenrod"
           android:text="Bike Booking Summary"
           android:textColor="@color/aliceblue" />
       
       <Button
           android:id="@+id/CmdSignoutSM"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@color/darkolivegreen"
           android:text="Signout"
           android:textColor="@color/aliceblue" />

     </LinearLayout>

   
    
</LinearLayout>
