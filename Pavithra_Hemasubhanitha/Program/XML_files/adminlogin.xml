<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkcyan"
    android:orientation="vertical" >

<TextView
    android:id="@+id/Txtadmlogin233"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkgoldenrod"
    android:gravity="center"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:text="Administrator Login"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="@color/seashell" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/txtAdminName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Username"
            android:text="admin"
            android:textColorHint="@color/aliceblue" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/txtAdminPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:text="admin"
            android:textColorHint="@color/azure" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/btnAdminLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.26"
            android:background="@color/gainsboro"
            android:text="Login" />

    </LinearLayout>
    
    </LinearLayout>