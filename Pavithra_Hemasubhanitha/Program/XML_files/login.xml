<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1CCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chocolate"
        android:gravity="center"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:text="User Login"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/seashell"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/TxtUNCCL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Username"
            android:textColorHint="@color/brown" />

    </LinearLayout>

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/TxtPasswordCCL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/brown" />

    </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" 
        android:orientation="horizontal" >

            <Button
                android:id="@+id/CmdLoginCCL"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:background="@color/darkseagreen"
                android:textColor="@color/darkslateblue"
                android:text="Login" />
			
			<Button
			    android:id="@+id/CmdRegCCL"
			    android:layout_width="50dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="0.42"
			    android:background="@color/darkolivegreen"
			    android:text="Registration"
			    android:textColor="@color/azure" />

        </LinearLayout>
</LinearLayout>

</LinearLayout>