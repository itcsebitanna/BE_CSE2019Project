<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/TxtBIDSBR"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="Parking Lane-ID :    "
                            android:textColor="@color/brown"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TxtLIDCPUS"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_weight="0.19"
                            android:text="Lane-ID"
                            android:textColor="@color/blue"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/TxtSrcSBR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Parking Lane Name : "
                            android:textColor="@color/brown"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TxtLNameCPUS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.19"
                            android:text="Lane Name"
                            android:textColor="@color/blue"
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>
				                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/TxtCitySBR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="City : "
                            android:textColor="@color/brown"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TxtCityCPUS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.19"
                            android:text="City"
                            android:textColor="@color/blue"
                            android:textSize="15dp" />

                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/TxtDescCPUS"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="0.12"
                    android:text="Description"
                    android:textColor="@color/darkcyan"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>